<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%= t(".email") %>: <%= @user.email %></p>
      <p><%= t(".member_since") %>: <%= l(@user.created_at, format: :long) %></p>
    </section>
  </aside>
</div>
