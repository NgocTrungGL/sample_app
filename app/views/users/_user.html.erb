<li class="user-item">
  <div class="user-avatar">
    <%= gravatar_for user, size: 50 %>
  </div>

  <div class="user-info">
    <%= link_to user.name, user, class: "user-name" %>

    <% if can_destroy?(user) %>
      <span class="separator">|</span>
      <%= link_to "Delete", user,
                  data: {
                    "turbo-method": :delete,
                    turbo_confirm: "Are you sure?"
                  },
                  class: "delete-link" %>
    <% end %>
  </div>
</li>
